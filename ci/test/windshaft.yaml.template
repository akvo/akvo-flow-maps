apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: flow-maps-windshaft
  namespace: flow-maps
spec:
  replicas: 1
  template:
    metadata:
      labels:
        run: flow-maps-windshaft
        flow-maps-version: $TRAVIS_COMMIT
    spec:
      containers:
      - name: flow-maps-windshaft
        image: eu.gcr.io/akvo-lumen/akvo-flow-maps-windshaft:$TRAVIS_COMMIT
        ports:
        - containerPort: 4000
        resources:
          requests:
            cpu: "50m"
          limits:
            cpu: "1000m"
        env:
        - name: ENCRYPTION_KEY
          valueFrom:
            secretKeyRef:
              name: flow-maps-windshaft
              key: encryption_key
---
apiVersion: v1
kind: Service
metadata:
  name: flow-maps-windshaft
  namespace: flow-maps
  labels:
    run: flow-maps-windshaft
spec:
  type: NodePort
  ports:
  - port: 4000
    targetPort: 4000
  selector:
    run: flow-maps-windshaft